{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["server/src/**/*.ts", "meq/src/**/*.ts", "server/__tests__/**/*.spec.ts"], // Added test path
  "exclude": ["node_modules"]
}
